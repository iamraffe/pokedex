<h1>Pok√©dex</h1>

<!-- List of pokemon -->
<ul class="pokedex-list">
  <% @pokemon.each do |pkmn| %>
    <li>
      <button class="js-show-pokemon btn btn-link"
          data-pokemon-uri="<%= pkmn["resource_uri"] %>">
        <%= pkmn["name"] %>
      </button>
    </li>
  <% end %>
</ul>


<!-- Pokemon modal view (hidden at first) -->
<div id="pokedex" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>

        <h3 class="modal-title">
          <span id="js-pokemon-name"></span>
          <small id="js-pokemon-number"></small>
        </h3>
      </div><!-- .modal-header -->

      <div class="modal-body">
        <dl class="dl-horizontal">
          <dt>Height</dt>
          <dd id="js-pokemon-height"></dd>

          <dt>Weight</dt>
          <dd id="js-pokemon-weight"></dd>

          <dt>Hit Points</dt>
          <dd id="js-pokemon-hp"></dd>

          <dt>Attack</dt>
          <dd id="js-pokemon-attack"></dd>

          <dt>Defense</dt>
          <dd id="js-pokemon-defense"></dd>

          <dt>Special Attack</dt>
          <dd id="js-pokemon-sp-atk"></dd>

          <dt>Special Defense</dt>
          <dd id="js-pokemon-sp-def"></dd>

          <dt>Speed</dt>
          <dd id="js-pokemon-speed"></dd>
        </dl>
        <dl id="js-pokemon-types" class="dl-horizontal">
          <dt>Type</dt>
        </dl>
      </div><!-- .modal-body -->

    </div><!-- .modal-content -->
  </div><!-- .modal-dialog -->
</div><!-- .modal -->
